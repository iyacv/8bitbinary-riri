<Window x:Class="_8bitbinary_riri.TopScoresWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8bitbinary_riri"
        mc:Ignorable="d"
        Title="TopScoresWin" Height="450" Width="400">
    <Grid>
        <Image Source="/pixelleaderb.png" Stretch="UniformToFill" Margin="0,-1,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Width="400">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.158"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.621"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="LeaderBoards" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="18" Width="250" FontFamily="DePixel Breit" Margin="0,20,0,0" HorizontalContentAlignment="Center"/>
        <ListBox Name="topScoresListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="350" Height="273" Margin="0,84,0,0">
            <!-- Items will be added programmatically -->
        </ListBox>



    </Grid>
</Window>