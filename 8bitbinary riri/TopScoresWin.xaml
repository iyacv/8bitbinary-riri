<Window x:Class="_8bitbinary_riri.TopScoresWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8bitbinary_riri"
        mc:Ignorable="d"
        Title="LeaderBoard" Height="460" Width="570">
    <Grid>

        <Image Source="/pixelleaderb.png" Margin="0,-1,0,0" HorizontalAlignment="Left" Width="573"  Stretch="UniformToFill" >

        </Image>
        <Label Content="LeaderBoards" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="18" Width="250" FontFamily="DePixel Breit" Margin="0,20,0,0" HorizontalContentAlignment="Center" Grid.Column="1" Height="43"/>
        <ListBox Name="topScoresListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="494" Height="278" Margin="0,73,0,0" Background="#FF241260" BorderBrush="White" Foreground="White" FontFamily="DePixel Breit"/>
        <TextBox x:Name="currentPlayerScoreTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="37" Margin="0,373,0,0" IsReadOnly="True" FontFamily="DePixel Breit" Foreground="#FF241260" FontSize="16" Grid.Column="1" Background="#FFFBAC1D"/>

    </Grid>
</Window>