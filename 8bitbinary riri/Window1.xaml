<Window x:Class="_8bitbinary_riri.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8bitbinary_riri"
        mc:Ignorable="d"
        Title="8 Bit Binary" Height="450" Width="400">
    <Grid>
        <Image Source="/mainmenu .png" Stretch="Fill"/>
        <TextBlock Text="8 Bit Binary Game" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,155,0,0" FontFamily="DePixel Breit" Foreground="#FFDA6725" />
        <TextBlock Text="Enter your name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="104,213,0,0" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="White"/>
        <TextBox x:Name="playerNameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,234,0,0" Width="192" FontFamily="DePixel Breit" FontSize="14"/>

        <Button Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,278,0,0" Click="StartButton_Click" FontSize="18" FontFamily="Segoe UI Black" BorderBrush="#FFDA6725" Background="#FFDA6725"/>
        

    </Grid>
</Window>
